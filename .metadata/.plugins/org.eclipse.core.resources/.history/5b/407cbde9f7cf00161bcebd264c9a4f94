import java.util.*;
import javax.swing.*;
import java.awt.*;

import javax.swing.event.*;

public class Demo1 {
	JFrame jr;
	JButton btn;
	
	public Demo1(){
		init();
	}
	public void init (){
		
		jr = new JFrame();
		btn= new JButton("Hello");
		Container c= jr.getContentPane();
		
		c.setLayout(new FlowLayout());
		jr.add(btn);
		
		jr.setSize(400,100);
		jr.setVisible(true);
		
	}
	
	public static void main(String[] args) {
		
		Demo1 d1= new Demo1();
	}

}
